@model IEnumerable<GetSkills.Models.ProfileIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="~/Content/font-awesome.css">
<style>
    th {
        background-color: dimgray;
        border-left: 1px solid #555;
        border-right: 1px solid #777;
        border-top: 1px solid #555;
        border-bottom: 1px solid #333;
        box-shadow: inset 0 1px 0 #999;
        color: #fff;
        font-weight: bold;
        padding: 10px 15px;
        position: relative;
        text-shadow: 0 1px 0 #000;
        text-align: center;
    }

    .story_font_h2 {
        color: #393939;
    }

    header .container {
        max-width: none;
    }
</style>

<script type="text/javascript">
    function removeWidthLimit() {
        document.getElementById('page_container').style.maxWidth = 'none';
        document.getElementById('page_container').style.paddingRight = '60px';
        document.getElementById('page_container').style.paddingLeft = '60px';
    }
    window.onload = removeWidthLimit;
</script>

<h2 style="color:#393939;">Team Profile</h2>

<p style="padding-right:5px; padding-bottom:10px;">
    @Html.ActionLink(" Add a Team Profile", "Create", new { }, new { @class = "fa fa-plus fa-lg pull-right" })
</p>

<table class="table table-hover table-bordered no_max_width">
    <thead>
        <tr style="white-space:nowrap">
            <th>
                Name
            </th>
            <th>
                Photo
            </th>
            <th>
                Description
            </th>
            <th>
                Linkedin
            </th>
            <th>
                &nbsp;
            </th>
        </tr>
    </thead>

    <tbody style="color:#393939; font-size:small;">
        @foreach (var item in Model)
        {
            <tr>           
                <td>
                    @Html.DisplayFor(modelItem => item.teamProfile.name)
                </td>
                <td style="text-align:center;">
                    @if (item.teamProfile.pic != "")
                    {
                        <img src="@Url.Content(item.teamProfile.pic)" alt="User Image" style="width:140px;" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.teamProfile.detail)
                </td>
                <td>
                    <a href=@item.teamProfile.linked_url class="icon-button linkedin">
                        <i class="fa fa-linkedin"></i><span></span>
                    </a>
                </td>             
                <td style="white-space:nowrap">
                    @Html.ActionLink(" Edit", "Edit", new { id = item.teamProfile.profile_id }, new { @class = "fa fa-pencil-square-o" }) <br>
                    @Html.ActionLink(" Delete", "Delete", new { id = item.teamProfile.profile_id }, new { @class = "fa fa-trash-o" })
                </td>
            </tr>
        }
    </tbody>
</table>















